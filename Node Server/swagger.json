{
  "openapi": "3.0.0",
  "info": {
    "title": "Museum Curator Panel API",
    "version": "1.0.0",
    "description": "API for managing curator panels in museum rooms"
  },
  "paths": {
    "/api/{museumID}/{roomID}/panel": {
      "get": {
        "summary": "Get curator panels",
        "description": "Fetch all curator panels for a given museum and room.",
        "parameters": [
          {
            "name": "museumID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "roomID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "List of panels",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "museumID": { "type": "string" },
                      "roomID": { "type": "string" },
                      "x": { "type": "number" },
                      "y": { "type": "number" },
                      "z": { "type": "number" },
                      "red": { "type": "integer" },
                      "green": { "type": "integer" },
                      "blue": { "type": "integer" },
                      "alpha": { "type": "number" },
                      "text": { "type": "string" },
                      "icon": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create new curator panel",
        "parameters": [
          {
            "name": "museumID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "roomID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["x", "y", "z", "red", "green", "blue", "alpha", "text", "icon"],
                "properties": {
                  "x": { "type": "number" },
                  "y": { "type": "number" },
                  "z": { "type": "number" },
                  "red": { "type": "integer", "minimum": 0, "maximum": 255 },
                  "green": { "type": "integer", "minimum": 0, "maximum": 255 },
                  "blue": { "type": "integer", "minimum": 0, "maximum": 255 },
                  "alpha": { "type": "number", "minimum": 0, "maximum": 1 },
                  "text": { "type": "string" },
                  "icon": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Panel created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "panelID": { "type": "string" } }
                }
              }
            }
          },
          "400": { "description": "Validation error" },
          "503": { "description": "Database connection error" }
        }
      },
      "patch": {
        "summary": "Update curator panel",
        "description": "Update one or more fields of a curator panel by docID.",
        "parameters": [
          {
            "name": "museumID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "roomID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["docID", "fields"],
                "properties": {
                  "docID": { "type": "string" },
                  "fields": {
                    "type": "object",
                    "description": "Key-value pairs of fields to update"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Document updated successfully" },
          "400": { "description": "Missing docID or invalid request" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete curator panel",
        "description": "Delete a curator panel by docID.",
        "parameters": [
          {
            "name": "museumID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "roomID",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["docID"],
                "properties": {
                  "docID": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Document deleted successfully" },
          "400": { "description": "Missing docID or document not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/museums": {
      "get": {
        "summary": "Get a list of museum IDs",
        "tags": ["Museums"],
        "responses": {
          "200": {
            "description": "A list of museum IDs.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": "TestMuseum"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server could not connect to the database."
          }
        }
      }
    },
    "/api/{museumID}/authenticate": {
      "post": {
        "summary": "Validate curator login",
        "tags": ["Authentication"],
        "parameters": [
          {
            "name": "museumID",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the museum to authenticate against."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "curatorID": { "type": "string", "example": "iain" },
                  "curatorPassword": { "type": "string", "example": "testPassword" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Login successful." }
                  }
                }
              }
            }
          },
          "400": { "description": "Missing museumID, curatorID, or curatorPassword." },
          "401": { "description": "Invalid curatorID or curatorPassword." },
          "404": { "description": "Museum not found." },
          "500": { "description": "Server could not connect to the database." }
        }
      }
    },
    "/server/health": {
      "get": {
        "summary": "Server health check",
        "tags": ["Server"],
        "responses": {
          "200": {
            "description": "Server is OK and online.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Server is OK and online." }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
